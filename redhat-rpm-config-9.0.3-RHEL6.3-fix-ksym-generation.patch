-    join -t '\t' -j 1 -v 2 $symvers <(mod_requires "${modules[@]}") | sort -u \
+    LANG=C join -t '\t' -j 1 -v 2 $symvers <(mod_requires "${modules[@]}") | LANG=C sort -u \
